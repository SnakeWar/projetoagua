<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ionicframework.starter" version="0.0.1"
        xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Projeto</name>
    <description>
        Projeto √Ågua
    </description>
    <author email="mayrcon_marlon@hotmail.com" href="https://www.facebook.com/mayrconmarlon.warchiefsnake">
      Mayrcon
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Plugins -->
    <plugin name="cordova-plugin-whitelist" spec="1.2.2"/>
    <plugin name="org.apache.cordova.splashscreen"/>
    <plugin name="org.apache.cordova.inappbrowser" />
    <plugin name="org.apache.cordova.statusbar" source="pgb"/>

    <!-- Platforms -->
    <platform name="ios" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="15" />
        <preference name="android-build-tool" value="gradle" />
    </platform>

    <preference name="exit-on-suspend" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="true" />

    <!-- Icons and Splash -->
    <!-- Android -->
    <icon src="resources/icon/android/android.png" platform="android"/>
    <splash src="resources/splash/android/hdpi.png" platform="android" density="ldpi"/>
    <splash src="resources/splash/android/hdpi.png" platform="android" density="mdpi"/>
    <splash src="resources/splash/android/hdpi.png" platform="android" density="hdpi"/>
    <splash src="resources/splash/ios/ip5-portrait.png" platform="android" density="xhdpi"/>
    <splash src="resources/splash/ios/ip6-portrait.png" platform="android" density="xxhdpi"/>

    <!-- iOS -->
    <icon src="resources/icon/ios/Icon-Small.png" platform="ios" width="29" height="29" />
    <icon src="resources/icon/ios/Icon-Small-40.png" platform="ios" width="40" height="40" />
    <icon src="resources/icon/ios/Icon-Small-50.png" platform="ios" width="50" height="50" />
    <icon src="resources/icon/ios/Icon.png" platform="ios" width="57" height="57" />
    <icon src="resources/icon/ios/Icon-Small@2x.png" platform="ios" width="58" height="58" />
    <icon src="resources/icon/ios/Icon-72.png" platform="ios" width="72" height="72" />
    <icon src="resources/icon/ios/Icon-76.png" platform="ios" width="76" height="76" />
    <icon src="resources/icon/ios/Icon-Small-40@2x.png" platform="ios" width="80" height="80" />
    <icon src="resources/icon/ios/Icon-Small-50@2x.png" platform="ios" width="100" height="100" />
    <icon src="resources/icon/ios/Icon@2x.png" platform="ios" width="114" height="114" />
    <icon src="resources/icon/ios/Icon-60@2x.png" platform="ios" width="120" height="120" />
    <icon src="resources/icon/ios/Icon-72@2x.png" platform="ios" width="144" height="144" />
    <icon src="resources/icon/ios/Icon-76@2x.png" platform="ios" width="152" height="152" />
    <icon src="resources/icon/ios/Icon-60@3x.png" platform="ios" width="180" height="180" />
    <splash src="resources/splash/ios/ip4-portrait.png" platform="ios" width="320" height="480" /> <!-- iPhone e iPod Touch -->
    <splash src="resources/splash/ios/ip4-portrait.png" platform="ios" width="640" height="960" /> <!-- iPhone e iPod Touch -->
    <splash src="resources/splash/ios/ip5-portrait.png" platform="ios" width="640" height="1136" /> <!-- iPhone 5 / iPod Touch 5a geracao -->
    <splash src="resources/splash/ios/ip6-portrait.png" platform="ios" width="750" height="1334" /> <!-- iPhone 6 -->
    <splash src="resources/splash/ios/ip6p-portrait.png" platform="ios" width="1242" height="2208" /> <!-- iPhone 6 Plus -->
    <splash src="resources/splash/ios/ipad-portrait.png" platform="ios" width="768" height="1024" /> <!-- iPad -->
    <splash src="resources/splash/ios/ipad-landscape.png" platform="ios" width="1024" height="768" /> <!-- iPad -->


    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
</widget>
